<Window x:Class="Righteous.Windows.ScriptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Righteous.Windows"
        mc:Ignorable="d"
        Title="Righteous" MinHeight="250" MinWidth="300" ResizeMode="CanResizeWithGrip"
        SizeToContent="WidthAndHeight" ShowInTaskbar="False" WindowStartupLocation="CenterScreen"
        DataContext="{Binding RelativeSource={RelativeSource self}}"
        LocationChanged="Window_LocationChanged">
    <DockPanel LastChildFill="True">
        <DockPanel DockPanel.Dock="Top">
            <Label Content="ID"/>
            <Label Content="{Binding Model.ID}"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Label Content="Name"/>
            <TextBox Text="{Binding Model.Name, UpdateSourceTrigger=PropertyChanged}"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Label Content="Description"/>
            <TextBox Text="{Binding Model.Description, UpdateSourceTrigger=PropertyChanged}"/>
        </DockPanel>
        <TextBox DockPanel.Dock="Bottom" Text="{Binding Model.Scripts, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" AcceptsTab="True"/>
    </DockPanel>
</Window>
